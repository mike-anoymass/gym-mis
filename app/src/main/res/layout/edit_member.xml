<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".EditMember">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:padding="15dp">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="28dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/back_32"
            android:onClick="backBtnClicked" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="eDiT MeMber"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/checkmark_32"
            android:gravity="right"
            android:onClick="editBtnClicked" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/image"
                    android:layout_width="129dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0"
                    android:src="@drawable/image_32" />

                <Button
                    android:id="@+id/setImage"
                    android:layout_width="129dp"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    android:onClick="setImage" />

            </FrameLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="4dp"
                android:textColorHint="@android:color/black">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/edit_text_for_member"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"

                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_bg"
                android:orientation="horizontal"
                android:padding="4dp">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColorHint="@android:color/black">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/edit_text_for_member"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <EditText
                    android:id="@+id/code"
                    android:layout_width="fill_parent"
                    android:layout_height="53dp"
                    android:layout_weight="80"
                    android:background="@drawable/edit_text_for_member"
                    android:enabled="false"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:text="+265"
                    android:textSize="14sp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="20"
                    android:textColorHint="@android:color/black">

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:layout_weight="20"
                        android:background="@drawable/edit_text_for_member"
                        android:hint="Mobile"
                        android:inputType="phone"
                        android:paddingLeft="5dp"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/black">

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:background="@drawable/edit_text_for_member"
                        android:hint="Date of Birth"
                        android:paddingLeft="5dp"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/dobBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="7dp"
                    android:background="@android:color/transparent"
                    android:onClick="loadDatePicker" />

            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/black">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:background="@drawable/edit_text_for_member"
                    android:hint="Address"
                    android:paddingLeft="5dp"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
