<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/edittext_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="5dp"
    android:theme="@android:style/Theme.Holo.Light">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_for_member"
        android:padding="5dp">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Name: "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="10sp" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"


        android:orientation="horizontal">

        <TableRow>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageView"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0"
                android:src="@drawable/image_32" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of joining"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="12/12/1010"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="mike@gmail.com"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="0"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="0884799203"
                    android:textSize="10sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due amount"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="8sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="mk2900"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/deleteBtn"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    android:background="@drawable/layout_bg"
                    android:text="Delete"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />

            </LinearLayout>

        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/callBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@id/whatsappBtn"
            android:background="@drawable/layout_bg"
            android:text="Call"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/whatsappBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/layout_bg"
            android:text="WhatsApp"
            android:textColor="@android:color/black"
            android:textSize="10sp" />


        <Button
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/whatsappBtn"
            android:background="@drawable/layout_bg"
            android:text="Message"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/editBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/message"
            android:background="@drawable/layout_bg"
            android:text="Edit"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/detailsBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/editBtn"
            android:background="@drawable/layout_bg"
            android:text="@string/details"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

    </RelativeLayout>


</LinearLayout>